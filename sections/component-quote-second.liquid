{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

.component-quote-second {
  background: #1a1a1a;
  color: #fff;
}

.component-quote-second--container {
}

.component-quote-second--first {
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
}

.component-quote-second--it {
  font-size: 23px;
  font-weight: 100;
  line-height: 1.2;
  font-style: italic;
}

.component-quote-second--who {
  font-size: 16px;
  line-height: 1.2;
  padding-top: 20px;
  text-transform: uppercase;
}

.component-quote-second--who span {
  font-size: 15px;
  font-weight: 300;
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .component-quote-second--container {
    flex-direction: row;
    padding-left: 100px;
    padding-right: 100px;
  }
}

{%- endstyle -%}

<div class="component-quote-second gradient isolate">
  <div class="component-quote-second--container page-width section-{{ section.id }}-padding">
    <div class="component-quote-second--first">
      <div class="component-quote-second--it">
        “Follow your conscience — free from fear, coercion, and deceit. Realize the power of shared voices. And know this: alone, there is so much we cannot do, but together, there is so little we cannot do.”
      </div>
      <div class="component-quote-second--who">
        - Dr. Scott Jensen
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Component: Quote",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
